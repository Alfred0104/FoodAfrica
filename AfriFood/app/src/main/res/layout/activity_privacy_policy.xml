<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AltroDirectory.PrivacyPolicy">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Privacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Privacy &amp; Security"
                android:textSize="28sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_black"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="403dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:text="      Luogo di trattamento dei dati\n"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/Privacy"
                app:layout_constraintStart_toStartOf="@+id/Privacy"
                app:layout_constraintTop_toBottomOf="@+id/Privacy" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I trattamenti connessi ai servizi web sui siti dei nostri partner, hanno luogo presso la sede aziendale
			Genova, del Titolare del trattamento e sono curati solo da personale tecnico dell’Ufficio incaricato
			del trattamento, oppure da eventuali incaricati di occasionali operazioni di manutenzione. Nessun
			dato derivante dal servizio web viene comunicato o diffuso (art 90 GDPR). I dati personali forniti
			dagli utenti che inoltrano richieste di invio di materiale informativo sono utilizzati al solo fine di
			eseguire il servizio o la prestazione richiesta e sono comunicati a terzi nel solo caso in cui ciò sia a
			tal fine necessario (art 3 GDPR)."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="403dp"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:text="      Privacy Policy per i visitatori del sito\n"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/textView18"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                 />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La presente Privacy Policy ha lo scopo di descrivere le modalità di gestione di questo sito, in
			riferimento al trattamento dei dati personali degli utenti/visitatori che lo consultano. Si tratta di
			un’informativa che è resa anche ai sensi dell’art. 13 del D. Lgs. 196/03 - Codice in materia di
			protezione dei dati personali – a coloro che si collegano al sito web aziendale di Louviane Restaurant S.p.A e
			usufruiscono dei relativi servizi web a partire daagli indirizzi dei nostri partner.
			Il sito [https://www.louvianerestaurant.it] è di proprietà e gestione di Louviane Restaurant S.p.A. che garantisce il rispetto della
			normativa in materia di protezione dei dati personali (D.Lgs 196/03)."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintEnd_toEndOf="@+id/textView19"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="403dp"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:text="      Cosa si intende per dati personali e trattamento dei dati personali?\n"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/textView20"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costituisce trattamento dei dati personali qualsiasi operazione o complesso di operazioni, effettuati
			anche senza l’ausilio di strumenti elettronici, concernenti la raccolta, la registrazione,
			l’organizzazione, la conservazione, la consultazione, l’elaborazione, la modificazione, la selezione,
			l’estrazione, il raffronto, l’utilizzo, l’interconnessione, il blocco, la comunicazione, la diffusione, la
			cancellazione e la distruzione di dati, anche se non registrati in una banca di dati."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>